---
import Layout from "../layouts/Layout.astro";
import HomeSlideshow from "../components/HomeSlideshow.astro";
import "../styles/pages/home.css";
---

<Layout title="Inicio | Beauty SH">
  <div class="home-container">
    <HomeSlideshow />

    <div class="home-actions">
      <a href="/gallery" class="home-btn gallery-btn">
        <span class="btn-text">Ver Galería</span>
        <span class="btn-icon">→</span>
      </a>
      <a href="/services" class="home-btn services-btn">
        <span class="btn-text">Ver Servicios</span>
        <span class="btn-icon">→</span>
      </a>
    </div>

    <div class="home-bio">
      <p class="bio-tagline">Strong, natural nails</p>
      <p class="bio-services">Manicure • Gel • Polygel • Softgel • Pedicure</p>
    </div>
  </div>
</Layout>
