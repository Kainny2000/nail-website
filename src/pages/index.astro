---
import Layout from "../layouts/Layout.astro";
import HomeSlideshow from "../components/HomeSlideshow.astro";
---

<Layout title="Inicio | Beauty SH">
  <div class="home-container">
    <HomeSlideshow />

    <div class="home-actions">
      <a href="/gallery" class="home-btn gallery-btn">
        <span class="btn-text">Ver Galería</span>
        <span class="btn-icon">→</span>
      </a>
      <a href="/services" class="home-btn services-btn">
        <span class="btn-text">Ver Servicios</span>
        <span class="btn-icon">→</span>
      </a>
    </div>

    <div class="home-bio">
      <p class="bio-tagline">Strong, natural nails</p>
      <p class="bio-services">Manicure • Gel • Polygel • Softgel • Pedicure</p>
    </div>
  </div>
</Layout>

<style>
  .home-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 8rem);
  }

  .home-actions {
    display: flex;
    gap: 2rem;
    width: 100%;
    max-width: 800px;
    animation: fadeInUp 1s ease-out 0.6s both;
  }

  .home-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2rem;
    border-radius: 1.5rem;
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: 700;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .gallery-btn {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #fff;
  }

  .services-btn {
    background: var(--primary-color, #ff27a9);
    color: #fff;
    box-shadow: 0 10px 20px rgba(255, 39, 169, 0.2);
  }

  .home-btn:hover {
    transform: translateY(-8px);
  }

  .gallery-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .services-btn:hover {
    background: #ff4db8;
    box-shadow: 0 15px 30px rgba(255, 39, 169, 0.4);
  }

  .btn-icon {
    font-size: 2rem;
    transition: transform 0.3s ease;
  }

  .home-btn:hover .btn-icon {
    transform: translateX(10px);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .home-bio {
    margin-top: 6rem;
    padding: 3rem;
    text-align: center;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
    max-width: 800px;
    width: 100%;
    animation: fadeInUp 1s ease-out 0.9s both;
    position: relative;
  }

  .home-bio::before {
    content: "";
    position: absolute;
    top: -3rem;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--primary-color, #ff27a9),
      transparent
    );
  }

  .bio-tagline {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: #fff;
    background: linear-gradient(to bottom, #fff, #ccc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .bio-services {
    font-size: 1.2rem;
    color: var(--primary-color, #ff27a9);
    letter-spacing: 2px;
    text-transform: uppercase;
    font-weight: 600;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .home-actions {
      flex-direction: column;
      gap: 1rem;
    }
    .home-btn {
      padding: 1.5rem;
      font-size: 1.2rem;
    }
  }
</style>
